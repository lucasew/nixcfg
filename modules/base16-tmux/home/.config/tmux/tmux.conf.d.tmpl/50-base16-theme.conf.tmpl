# Base16 Tmux Theme
# Auto-generated by workspaced base16-tmux module
{{- $base16 := index .Modules "base16" }}

# Pane borders
set -g pane-border-style fg=#{{ $base16.base01 }}
set -g pane-active-border-style fg=#{{ $base16.base0D }}

# Status bar
set -g status-style bg=#{{ $base16.base00 }},fg=#{{ $base16.base05 }}

# Window status
setw -g window-status-current-style bg=#{{ $base16.base02 }},fg=#{{ $base16.base0D }},bold
setw -g window-status-style bg=#{{ $base16.base01 }},fg=#{{ $base16.base04 }}

# Message text
set -g message-style bg=#{{ $base16.base00 }},fg=#{{ $base16.base0D }}
set -g message-command-style bg=#{{ $base16.base00 }},fg=#{{ $base16.base0D }}

# Pane number display
set -g display-panes-active-colour "#{{ $base16.base0D }}"
set -g display-panes-colour "#{{ $base16.base01 }}"

# Clock mode
setw -g clock-mode-colour "#{{ $base16.base0D }}"

# Copy mode
setw -g mode-style bg=#{{ $base16.base02 }},fg=#{{ $base16.base05 }}
