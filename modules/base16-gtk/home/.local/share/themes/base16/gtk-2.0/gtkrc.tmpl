# Base16 GTK-2.0 Theme
# Generated by workspaced base16-gtk module
{{- $base16 := index .Modules "base16" }}

style "base16-default" {
  bg[NORMAL]      = "#{{ $base16.base01 }}"
  bg[PRELIGHT]    = "#{{ $base16.base02 }}"
  bg[ACTIVE]      = "#{{ $base16.base02 }}"
  bg[SELECTED]    = "#{{ $base16.base0D }}"
  bg[INSENSITIVE] = "#{{ $base16.base00 }}"

  fg[NORMAL]      = "#{{ $base16.base05 }}"
  fg[PRELIGHT]    = "#{{ $base16.base06 }}"
  fg[ACTIVE]      = "#{{ $base16.base06 }}"
  fg[SELECTED]    = "#{{ $base16.base00 }}"
  fg[INSENSITIVE] = "#{{ $base16.base03 }}"

  base[NORMAL]      = "#{{ $base16.base00 }}"
  base[PRELIGHT]    = "#{{ $base16.base02 }}"
  base[ACTIVE]      = "#{{ $base16.base0D }}"
  base[SELECTED]    = "#{{ $base16.base0D }}"
  base[INSENSITIVE] = "#{{ $base16.base01 }}"

  text[NORMAL]      = "#{{ $base16.base05 }}"
  text[PRELIGHT]    = "#{{ $base16.base06 }}"
  text[ACTIVE]      = "#{{ $base16.base00 }}"
  text[SELECTED]    = "#{{ $base16.base00 }}"
  text[INSENSITIVE] = "#{{ $base16.base03 }}"
}

class "GtkWidget" style "base16-default"

style "base16-entry" {
  base[NORMAL] = "#{{ $base16.base00 }}"
  base[ACTIVE] = "#{{ $base16.base00 }}"
  text[NORMAL] = "#{{ $base16.base05 }}"
  text[ACTIVE] = "#{{ $base16.base05 }}"
}

class "GtkEntry" style "base16-entry"

style "base16-button" {
  bg[NORMAL]   = "#{{ $base16.base02 }}"
  bg[PRELIGHT] = "#{{ $base16.base03 }}"
  bg[ACTIVE]   = "#{{ $base16.base0D }}"
  fg[NORMAL]   = "#{{ $base16.base05 }}"
  fg[PRELIGHT] = "#{{ $base16.base06 }}"
  fg[ACTIVE]   = "#{{ $base16.base00 }}"
}

class "GtkButton" style "base16-button"

style "base16-menu" {
  bg[NORMAL] = "#{{ $base16.base01 }}"
  fg[NORMAL] = "#{{ $base16.base05 }}"
}

class "GtkMenu" style "base16-menu"
class "GtkMenuBar" style "base16-menu"
