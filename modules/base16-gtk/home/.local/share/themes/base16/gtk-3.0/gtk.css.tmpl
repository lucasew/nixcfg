/* Base16 GTK-3.0 Theme */
/* Generated by workspaced base16-gtk module */
{{- $base16 := index .Modules "base16" }}

@define-color theme_fg_color #{{ $base16.base05 }};
@define-color theme_bg_color #{{ $base16.base01 }};
@define-color theme_base_color #{{ $base16.base00 }};
@define-color theme_selected_bg_color #{{ $base16.base0D }};
@define-color theme_selected_fg_color #{{ $base16.base00 }};
@define-color insensitive_bg_color #{{ $base16.base00 }};
@define-color insensitive_fg_color #{{ $base16.base03 }};
@define-color insensitive_base_color #{{ $base16.base01 }};
@define-color theme_unfocused_fg_color #{{ $base16.base04 }};
@define-color theme_unfocused_bg_color #{{ $base16.base01 }};
@define-color theme_unfocused_base_color #{{ $base16.base00 }};
@define-color theme_unfocused_selected_bg_color #{{ $base16.base0D }};
@define-color theme_unfocused_selected_fg_color #{{ $base16.base00 }};
@define-color borders #{{ $base16.base02 }};
@define-color unfocused_borders #{{ $base16.base02 }};

@define-color warning_color #{{ $base16.base0A }};
@define-color error_color #{{ $base16.base08 }};
@define-color success_color #{{ $base16.base0B }};

/* Link colors */
@define-color link_color #{{ $base16.base0D }};
@define-color link_visited_color #{{ $base16.base0E }};

/* Additional base16 colors for customization */
@define-color base16_base00 #{{ $base16.base00 }};
@define-color base16_base01 #{{ $base16.base01 }};
@define-color base16_base02 #{{ $base16.base02 }};
@define-color base16_base03 #{{ $base16.base03 }};
@define-color base16_base04 #{{ $base16.base04 }};
@define-color base16_base05 #{{ $base16.base05 }};
@define-color base16_base06 #{{ $base16.base06 }};
@define-color base16_base07 #{{ $base16.base07 }};
@define-color base16_base08 #{{ $base16.base08 }};
@define-color base16_base09 #{{ $base16.base09 }};
@define-color base16_base0A #{{ $base16.base0A }};
@define-color base16_base0B #{{ $base16.base0B }};
@define-color base16_base0C #{{ $base16.base0C }};
@define-color base16_base0D #{{ $base16.base0D }};
@define-color base16_base0E #{{ $base16.base0E }};
@define-color base16_base0F #{{ $base16.base0F }};

/* Import Adwaita as base */
@import url("resource:///org/gtk/libgtk/theme/Adwaita/gtk-contained-dark.css");

/* Override with base16 colors */
* {
  background-color: @theme_bg_color;
  color: @theme_fg_color;
}

.background {
  background-color: @theme_bg_color;
  color: @theme_fg_color;
}

.view, textview text {
  background-color: @theme_base_color;
  color: @theme_fg_color;
}

entry {
  background-color: @theme_base_color;
  color: @theme_fg_color;
  border-color: @borders;
}

entry:focus {
  border-color: @theme_selected_bg_color;
}

button {
  background-color: @theme_bg_color;
  color: @theme_fg_color;
  border-color: @borders;
}

button:hover {
  background-color: @base16_base02;
}

button:active, button:checked {
  background-color: @theme_selected_bg_color;
  color: @theme_selected_fg_color;
}

headerbar {
  background-color: @base16_base02;
  color: @theme_fg_color;
}

/* Selection */
selection,
*:selected,
.view:selected {
  background-color: @theme_selected_bg_color;
  color: @theme_selected_fg_color;
}

/* Sidebar */
.sidebar {
  background-color: @base16_base01;
}

/* Popover */
popover.background {
  background-color: @base16_base01;
  border-color: @borders;
}

/* Menu */
menu, .menu {
  background-color: @base16_base01;
  color: @theme_fg_color;
}

menuitem:hover {
  background-color: @theme_selected_bg_color;
  color: @theme_selected_fg_color;
}
