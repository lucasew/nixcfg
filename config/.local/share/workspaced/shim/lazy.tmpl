{{- range $name, $tool := .LazyTools }}
{{- $pkg := $tool.Pkg }}{{ if not $pkg }}{{ $pkg = $name }}{{ end }}
{{- $bins := $tool.Bins }}
{{- if eq (len $bins) 0 }}
  {{- $binName := $tool.Alias }}
  {{- if not $binName }}
    {{- $parts := split $name ":" }}
    {{- $binName = last $parts }}
    {{- $parts = split $binName "/" }}
    {{- $binName = last $parts }}
  {{- end }}
  {{- $bins = list $binName }}
{{- end }}
{{- range $bins }}
{{- file . "0755" }}
{{ shim "mise" "exec" (printf "%s@%s" $pkg $tool.Version) "--" . }}
{{- endfile }}
{{- end }}
{{- end }}
