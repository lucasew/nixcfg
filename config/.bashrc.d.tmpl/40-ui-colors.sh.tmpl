# shellcheck shell=bash
# Apply terminal colors (generated from palette)
function apply_colors {
	if [[ $- == *i* ]]; then
		printf '\033]4;0;#{{ .Palette.Base00 }}\033\\'
		printf '\033]4;1;#{{ .Palette.Base08 }}\033\\'
		printf '\033]4;2;#{{ .Palette.Base0B }}\033\\'
		printf '\033]4;3;#{{ .Palette.Base0A }}\033\\'
		printf '\033]4;4;#{{ .Palette.Base0D }}\033\\'
		printf '\033]4;5;#{{ .Palette.Base0E }}\033\\'
		printf '\033]4;6;#{{ .Palette.Base0C }}\033\\'
		printf '\033]4;7;#{{ .Palette.Base05 }}\033\\'
		printf '\033]4;8;#{{ .Palette.Base03 }}\033\\'
		printf '\033]4;9;#{{ .Palette.Base08 }}\033\\'
		printf '\033]4;10;#{{ .Palette.Base0B }}\033\\'
		printf '\033]4;11;#{{ .Palette.Base0A }}\033\\'
		printf '\033]4;12;#{{ .Palette.Base0D }}\033\\'
		printf '\033]4;13;#{{ .Palette.Base0E }}\033\\'
		printf '\033]4;14;#{{ .Palette.Base0C }}\033\\'
		printf '\033]4;15;#{{ .Palette.Base07 }}\033\\'
		printf '\033]10;#{{ .Palette.Base05 }}\033\\'  # foreground
		printf '\033]11;#{{ .Palette.Base00 }}\033\\'  # background
		printf '\033]12;#{{ .Palette.Base05 }}\033\\'  # cursor
	fi
}

# Apply colors on shell startup
apply_colors
