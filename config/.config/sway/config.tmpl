# sway config file

set $mod Mod4

input type:keyboard {
  xkb_layout br,us
  xkb_options grp:win_space_toggle,terminate:ctrl_alt_bksp
}

bar {
  # swaybar_command waybar
  status_command i3pystatus -c $(sdw d root)/bin/_shortcuts/i3pystatus/main.py
  font pango: Fira Code 10
  hidden_state hide
  mode invisible
  position top

  colors {
    # background #00{{ .Palette.Base00 }}
    background #00000000
    statusline #{{ .Palette.Base05 }}
    separator #{{ .Palette.Base00 }}

    # name             border                 background             text
    focused_workspace  #{{ .Palette.Base01 }} #{{ .Palette.Base02 }} #{{ .Palette.Base05 }}
    active_workspace   #{{ .Palette.Base01 }} #{{ .Palette.Base03 }} #{{ .Palette.Base05 }}
    inactive_workspace #{{ .Palette.Base01 }} #{{ .Palette.Base01 }} #{{ .Palette.Base05 }}
    urgent_workspace   #{{ .Palette.Base08 }} #{{ .Palette.Base08 }} #{{ .Palette.Base00 }}
    binding_mode       #{{ .Palette.Base00 }} #{{ .Palette.Base00 }} #{{ .Palette.Base05 }}
  }
}

