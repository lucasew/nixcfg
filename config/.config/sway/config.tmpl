# Workspace bindings
bindsym $mod+0 workspace number 10
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9

bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9

# Focus bindings
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+a focus parent
bindsym $mod+Return exec workspaced open terminal

# Move bindings
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up

bindsym $mod+Shift+h workspace prev_on_output
bindsym $mod+Shift+l workspace next_on_output

# Sway control
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec i3-nagbar -t warning -m 'Do you want to exit i3?' -b 'Yes' 'loginctl kill-session $XDG_SESSION_ID'
bindsym $mod+Shift+f floating toggle
bindsym $mod+Shift+s sticky toggle

# Scratchpad
bindsym $mod+minus exec workspaced system workspace scratchpad
bindsym --locked $mod+equal exec workspaced system screen toggle
bindsym $mod+Shift+minus move scratchpad

# Window control
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart
bindsym $mod+d exec workspaced input launch
bindsym $mod+Shift+d exec workspaced input window
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen toggle
bindsym $mod+Ctrl+f fullscreen toggle global

bindsym $mod+s layout stacking
bindsym $mod+space focus mode_toggle

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+w layout tabbed
bindsym $mod+Ctrl+Right resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+Up    resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+Down  resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+Left  resize grow width 1 px or 1 ppt

# Media keys (locked = work even on lock screen)
bindsym --locked XF86AudioRaiseVolume exec workspaced system audio up
bindsym --locked XF86AudioLowerVolume exec workspaced system audio down
bindsym --locked XF86AudioMute exec workspaced system audio mute

bindsym --locked XF86AudioNext exec  workspaced media next
bindsym --locked XF86AudioPrev exec  workspaced media previous
bindsym --locked XF86AudioPlay exec  workspaced media play-pause
bindsym --locked XF86AudioPause exec workspaced media play-pause

bindsym --locked XF86MonBrightnessUp   exec workspaced system brightness up
bindsym --locked XF86MonBrightnessDown exec workspaced system brightness down

# Multi-monitor
bindsym $mod+Shift+m move workspace to output left
bindsym $mod+m focus output right

# Workspaced shortcuts
bindsym --locked $mod+l exec workspaced system power lock
bindsym $mod+n exec workspaced system workspace rotate
bindsym $mod+z exec workspaced input workspace
bindsym $mod+Shift+z exec workspaced input workspace --move

bindsym $mod+b exec workspaced system workspace next
bindsym $mod+Shift+b exec workspaced system workspace next --move

# Screenshots
bindsym --release Print exec workspaced system screenshot output
bindsym $mod+Print exec workspaced system screenshot select
bindsym $mod+Shift+Print exec workspaced system screenshot window
bindsym $mod+Ctrl+Shift+Print exec workspaced system screenshot all

# Appearance
default_border pixel 2
hide_edge_borders smart
focus_on_window_activation urgent

# Wayland environment
exec_always systemctl --user import-environment XDG_SESSION_TYPE XDG_CURRENT_DESKTOP WAYLAND_DISPLAY DISPLAY SWAYSOCK PATH
exec_always dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Waybar
bar {
  swaybar_command waybar
}

# Autostart services
exec_always systemctl restart --user xss-lock nm-applet.service blueberry-tray.service kdeconnect.service kdeconnect-indicator.service dunst.service swayidle.service
exec_always systemctl --user restart xdg-desktop-portal
exec_always env WORKSPACED_REFRESH=1 workspaced
exec_always workspaced system screen reset
