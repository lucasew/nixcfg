#!/usr/bin/env bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

curl https://mise.run | sh

. $SCRIPT_DIR/bin/source_me

mkdir -p ~/.local/share/workspaced/bin

(
	cd "nix/pkgs/workspaced" || exit
	$SCRIPT_DIR/bin/shim/mise exec -- $SCRIPT_DIR/bin/shim/workspaced
) || exit 1


~/.local/share/workspaced/bin/workspaced dispatch apply
