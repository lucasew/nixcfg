
PR="$1"; shift

systemd-run \
  --user \
  --working-directory ~/nixpkgs \
  -P \
  --unit "nixpkgs-review-$PR" \
  --collect \
  -p KillSignal=SIGINT \
  -p TimeoutStopSec=infinity \
  \
  sdw nix review --really \
  \
  pr "$PR" \
  --no-shell \
  --post-result \
  --build-graph nix \
  --eval local \
  "$PR" "$@"
