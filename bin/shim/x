#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

MISE_CONFIG_FILE="$SCRIPT_DIR/mise.toml"

mise trust "$MISE_CONFIG_FILE" > /dev/null 2>&1

bin="$1"; shift
bin="$(MISE_CONFIG_FILE="$MISE_CONFIG_FILE" mise which "$bin")"
# echo "mise: $bin" >&2
exec "$bin" "$@"
